## AUTH SETTINGS
BETTER_AUTH_SECRET="your_better_auth_secret"
BETTER_AUTH_URL="http://localhost:3000" # Base URL of your app

## HMAC SIGNATURE HEADERS (used for plugin request verification)
SIGNED_SECRET="your_hmac_secret_value"
HMAC_HEADER_SIGNATURE="your_signature_header_name"     # e.g. x-request-signature
HMAC_HEADER_TIMESTAMP="your_timestamp_header_name"     # e.g. x-request-timestamp
HMAC_HEADER_NONCE="your_nonce_header_name"             # e.g. x-nonce-id

## NONCE TTL (in ms) â€” 5 minutes
NONCE_TIME_TO_LIVE="300000"

## DATABASE CONNECTION (PostgreSQL)
DATABASE_URL="postgresql://postgres:your_database_password@localhost:5432/postgres?search_path=public"

## REDIS SETTINGS
REDIS_HOST="127.0.0.1"
REDIS_PORT="6379"
REDIS_PASSWORD="your_redis_password"
